# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Terminal emulator
super + Return
	kitty

# Browser
super + l
	vivaldi-stable

super + Print
	{flameshot gui | clip}

super + i
	kitty -e htop

super + e
	rofi -show run

super + x
	$HOME/.config/i3/lock.sh

super + oslash
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

XF86MonBrightness{Down,Up}
	bright {-1,-10,min,+1,+10,max}
