[core]
	editor = nano
	excludesfile = ~/.gitignore
	pager = "/usr/share/git/diff-highlight/diff-highlight | less"
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[include]
	path = ~/.gitconfig_local
[gc]
	# Do not run automatic gc in the background
	autodetach = false
[push]
	default = simple
[alias]
	lg = !git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset %Cgreen{%G?}%Creset' --abbrev-commit | sed s/{[BEN]}// | sed s/{[[:alpha:]]}/âœ“/ | $PAGER
	ignoreall = !git status -s | grep -e ^?? | cut -c 4- >> .gitignore
	fixup = !sh -c 'REV=$(git rev-parse $1) && git commit -n --fixup $@ && git rebase -i --autosquash $REV^' -
	nuke = !git clean -fdx && git submodule foreach git clean -fdx
[help]
	autocorrect = 1
[rebase]
	autostash = true
[merge]
	conflictstyle = diff3
[url "git@github.com:"]
	insteadOf = "hub:"
