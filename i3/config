# #---Basic Definitions---# #
# Needed for i3-gaps
for_window [class="^.*"] border pixel 3
gaps inner 15
gaps outer 15
font pango:DejaVuSansMono Nerd Font 14
set $mod Mod4
set $term --no-startup-id terminology
set $browser --no-startup-id brave

# Hold modifier to move floating windows
floating_modifier $mod

# #---Starting External Scripts---# #
# Setting the background:
exec_always --no-startup-id feh --bg-scale --randomize ~/.config/wallpapers/
# Starts dunst for notifications:
exec --no-startup-id dunst
# Composite manager:
exec --no-startup-id compton --xrender-sync-fence
# Launch Polybar where appropriate:
# exec_always --no-startup-id ~/.config/polybar/launch.sh
# Unclutter makes the mouse invisible after a brief period
exec --no-startup-id unclutter
# Network Manager applet
exec --no-startup-id nm-applet
# ClipIt applet for clipboard history
exec --no-startup-id clipit

bar {
	font xft:DejaVuSansMono Nerd Font 16
	status_command i3blocks
	strip_workspace_numbers yes
	position bottom
}

